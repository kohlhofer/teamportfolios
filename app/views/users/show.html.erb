<div id="header" class="container_16 user">
  <div class="grid_13 prefix_3 alpha">
    <h1><%= @page_title = h(@user.name) %></h1>
    <p><%= h(@user.strapline)%></p>
  </div>
  <div class="clear-this"> </div>
</div>

<div id="content" class="container_16">
  <div class="grid_3 alpha">
    	<%=avatar_for(@user, :large) %>
			<% if logged_in? && current_user == @user %>
			 <p><%=link_to((@user.avatar.nil? ? 'Upload avatar' : 'Change avatar'), edit_avatar_settings_path) %></p>
			 <% end %>
			 <br />
  </div>
  
  <div class="grid_9">
    <% unless @user.bio.blank? %>
			<div id="user-description">
	      <p><%= @user.bio %></p>
	    </div>
    <% end %>
	 
    <div id="projects">
    	<% @user.projects.each do |project| %>
    	  	<%= render 'projects/preview', :project => project %>
      <% end %>    
    	<div class="clear-this"> </div>
    	
    	
    	<p><%= link_to "New project", new_project_path, {:id=>"new-project-link"} %></p>
    	
    </div>
    
  </div>
  
  <div class="grid_4 omega">
    <h2 class="small-headline">Project Collaborators</h2>
  </div>
  <div id="footer" class="prefix_3">
      <p>Portfolios and profiles powered by <%= link_to "Team Portfolios", root_url, { :title => "Go to the home page and find out more..." } %>.
  </div>
</div>

