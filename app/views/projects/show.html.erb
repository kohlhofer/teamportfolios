<div id="header" class="container_16 project">
  <div class="grid_11 prefix_5 alpha">
    <h1>
      <%= @page_title = h(@project.title) %>
      <% if logged_in? && current_user.contributor_to?(@project) %>
        <span class="edit">(<%= link_to "Edit project", edit_project_path(@project), :id=>'edit-project-link' %>)</span>
      <% end %>
    </h1>
    <p><%=h(@project.strapline || "Another brilliant project")%></p>
  </div>
  <div class="clear-this"> </div>
</div>

<div id="content" class="container_16">
  
  
  <div class="grid_5 alpha">
    <div class="project-image">
      <p><img src="/images/project_preview_medium.png" width="280px" height="158px" alt="<%= @project %>" /></p>
      <p>This image has no caption.</p>
    </div>
  </div>
  
  <div class="grid_7">
   <p><%= h(@project.description) %></p>
  </div>

  <div class="grid_4 omega">
    <p><%= link_to nil, @project.homepage %></p>
    
    <h2>Created by:</h2>
    <ul id="contributors">
      <%@project.contributors.each do |user|%>
        <li class="validated">
          <% link_to user do %>
						<%= avatar_for(user) %>
	          <%= user %>
	          <%= user.strapline %>
					<% end %>
        </li>
      <%end%>
      <%@project.unvalidated_contributors.each do |uvc|%>
        <li class="not-validated">
          <%= uvc.name %>
        </li>
      <%end%>
    </ul>

    <% if logged_in? && current_user.contributor_to?(@project) %>
      <%= render 'unvalidated_contributor_form'%>
    <% end %>
		
  </div>
  <div class="clear-this"> </div>
</div>
