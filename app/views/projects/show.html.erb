<div id="header" class="container_16 project">
  <div class="grid_11 prefix_5 alpha">
    <h1>
      <%= @page_title = h(@project.title) %>
      <% if logged_in? && current_user.contributor_to?(@project) %>
        <span class="edit">
        	(
					<%= link_to "Edit project", edit_project_path(@project), :id=>'edit-project-link' %>
          |
					<% if current_user.sole_contributor_to?(@project)%>
	 				  <%= link_to "Delete project", project_path(@project), :method=>:delete, :id=>'delete-project', :confirm=> "Do you really want to leave this project and delete it?" %>
          <% else %>
					 <%= link_to "Leave project", leave_project_path(@project), :method=>:put, :id=>'leave-project', :confirm=> "Do you really want to leave this project?" %>
				  <% end %>
					)
				</span>
      <% end %>
    </h1>
    <p><%=h(@project.strapline || "Another brilliant project")%></p>
  </div>
  <div class="clear-this"> </div>
</div>

<div id="content" class="container_16">
  
  
  <div class="grid_5 alpha">
    <% @project.images.each do |image| %>
		<div class="project-image">
			
      <%=project_image_for(image, :medium)%>
      <% if logged_in? && current_user.contributor_to?(@project) %>
			 <p class="delete-image"><%=link_to "Delete image", project_image_path(@project, image), :method=>:delete, :confirm=>"Delete this image?"%></p>
			<% end %>
      <% unless image.caption.nil? && image.caption.blank?%>
			   <p class="caption"><%=image.caption%></p>
			<%end%>

    </div>
		<% end %>
		<% if logged_in? && current_user.contributor_to?(@project) %>
		  <p class="option"><%=link_to "Add an image...", new_project_image_path(@project) %></p>
		<% end %>
		<p> </p>
  </div>
  
  <div class="grid_7">
   <div id="project-description">  
     <%= htmltext(@project.description) %>
   </div>
   
   <div id="project-links">
     <%= link_to nil, @project.homepage %>
   </div>
  </div>

  <div class="grid_4 omega">
    
    <h2 class="small-headline">Created by </h2>
    <ul id="contributors">
      <% @project.contributors.each do |user|%>
        <li class="validated">
          <% link_to user do %>
						<%= avatar_for(user) %>
						<div class="user-details">
  	          <strong><%= user %></strong>
  	          <span class="strapline"><%= user.strapline %></span>
	          </div>
	          <div class="clear-this"> </div>
					<% end %>
        </li>
      <%end%>
      <%@project.unvalidated_contributors.each do |uvc|%>
        <li class="not-validated">
          <img src="/images/no-avatar-small.png" width="40px" height="40px" />
          <div class="user-details">
	          <%= uvc.name %>
	          <span class="strapline">(unclaimed profile)</span>
	          <% if logged_in?%> 
              <% if current_user.contributor_to?(@project)%>
  						  <%= link_to "Edit", edit_project_unvalidated_contributor_path(@project, uvc), :class=>'edit-unvalidated'%>
  						  <%= link_to "Delete", project_unvalidated_contributor_path(@project, uvc), :method=> :delete,:confirm=>"Delete this contributor?", :class=>'delete-unvalidated' %>
              <% elsif uvc.email==current_user.email%>
  					     <%= render :partial=>'validate_self_as_contributor', :object=>uvc %>
  					  <% end %>
  					<% end %>
          </div>
        </li>
      <%end%>
    </ul>

    <% if logged_in? && current_user.contributor_to?(@project) %>
      <div id="manage-contributors">
        <p class="option"><a id="show-form-link" href="javascript:$('add-contributor').show()">Add another contributor...</a></p>
        <%= render 'unvalidated_contributor_form'%>
      </div>
    <% end %>
		
  </div>
  <div id="footer" class="prefix_5">
      <p>Portfolios and profiles powered by <%= link_to "Team Portfolios", "http://teamportfolios.com/projects/team_portfolios", { :title => "Find out more..." } %>.</p>
  </div>
</div>
