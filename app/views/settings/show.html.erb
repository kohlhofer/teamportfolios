<div id="header" class="container_16">

  <h1><%= @page_title = "Dashboard" %></h1>


  <h2>Edit:</h2>
  <p><%= link_to "Edit your account", settings_path, { :title => "Edit you account" } %> (email addresses, password...)</p>
	<p>Edit profile and links on <%= link_to "Your profile page ('#@user')", @user %></p>

  <% if @user.unvalidated_contributions.size > 0 %>
    <div id="unvalidated-projects"> 
			<h2>Unvalidated projects!</h2>
	    <p>Projects which someone has added you as a contributor, and you yet need to validate your participation in these projects:</p>
	    <ul>
	      <% @user.unvalidated_contributions.each do |uvc|%>
	        <%= render :partial=>'projects/minili', :object => uvc.project, :locals => {:text => '(Visit to validate or reject)'} %>
	      <% end %>
	    </ul>
		</div>
  <% end %>          
  
	<div id="projects">
		<h2>Projects</h2>
    <ul>
    	<%= render :partial=>'projects/minili', :collection => @user.projects %>
			<li><%= link_to "Add a new project", new_project_path, :id=>'new-project-link' %></li>
		</ul>
  </div>

	
    <ul id="contributors">
      	<h2>You and your collaborators</h2>
      <%= render :partial => 'users/collabli', :object => current_user%>
			<% current_user.collaborators.each do |user|%>
      <%= render :partial => 'users/collabli', :object => user%>
    <%end%>
		</ul>

</div>