<div id="login-page" class="grid_16">
  <div class="grid_5 prefix_8 alpha">
    <h1><%= @page_title = "Sign in" %></h1>
  </div>

  <div class="clear-this"> </div>

  <div class="grid_5 prefix_3 alpha ">
    <p>Only Team Portfolio members can create new projects.</p>
    <p>You can only join, if an existing member wants to show you as a collaborator on a project.</p>
  </div>
  
  <div class="grid_6 omega">
    <% form_tag session_path, {:id=>'loginForm'} do -%>
      <p>
        <%= label_tag 'login','User name' %>
        <%= text_field_tag 'login', @login %>
      </p>

      <p>
        <%= label_tag 'password', 'Password' %>
        <%= password_field_tag 'password', nil %>
      </p>

      <p>
        <%= check_box_tag 'remember_me', '1', @remember_me %><%= label_tag 'remember_me', 'Remember me', :class => "inlineLabel" %>
      </p>

      <p>
        <button type="submit" value="submit">Login in</button>
      </p>
    <% end -%>

  </div>
  
  
  

</div>


    

