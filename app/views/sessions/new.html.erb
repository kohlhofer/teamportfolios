<h1><%= @page_title = "Login" %></h1>

<% form_tag session_path, {:id=>'login'} do -%>
  <p>
    <%= label_tag 'login' %>
    <%= text_field_tag 'login', @login %>
  </p>

  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password', nil %>
  </p>

  <p>
    <%= check_box_tag 'remember_me', '1', @remember_me %><%= label_tag 'remember_me', 'Remember me' %>
  </p>
  
  <p>
    <%= submit_tag 'Log in' %>
  </p>
<% end -%>
