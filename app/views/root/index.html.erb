<%= render :partial=>'shared/getsatisfaction' %>




  

  
  <div id="teaser" class="grid_6">
    <h1 id="logo"><%= @page_title = "Share your work..." %></h1>
    <p>Portfolios and profiles for you and your collaborators.</p>
      
      
      <% if !logged_in? -%>
        <p>If you have an account, <%= link_to "sign in here...",  login_path,  { :title => "Log in" }  %></p>
       <% else -%>
        <p>To invite other users simply add them as collaborators to your projects.</p>
       <% end -%>
    
  </div>
  
  

  
  <div id="user-list" class="grid_9 prefix_1">
    <% @users.each do |user|%>
      <div class="grid_2 alpha">
        <div class="avatar">
        	<%= link_to avatar_for(user, :medium), user %>
      	</div>
      </div>
      <div class="grid_7 omega">
        <h2><%= link_to user, user %></h2>
        <p><%= user.strapline %></p>
        <p><%= user.projects.count %> Projects</p>
      </div>
      <div class="clear-this"> </div>
    <% end %>
        
  </div>
  
  
  