<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><%=h @page_title ? "#{@page_title} | Team Portfolios" : "Team Portfolios" %></title>
    <%= javascript_include_tag :all, :cache => true %>
    <%= stylesheet_link_tag :all, :cache => true %>
</head>
<body>
  
  <div id="wrap">
    <div id="header">
      <% if logged_in? -%>
      <ul id="navigation">
        <li>Logged in as <%= link_to current_user.name, current_user %></li>
        <li><%= link_to "Settings", settings_path, { :title => "Change your profile settings" }    %></li>
        <li><%= link_to "Log out", logout_path, { :title => "Log out" }    %></li>
      </ul>
      <% else -%>
        <%= link_to "Sign in",  login_path,  { :title => "Log in", :id => "loginLink" }  %>
      <% end -%>
      <%= link_to "Team Portfolios", root_url, :id => "logo" %>
    </div>
    
    <%= render :partial => 'layouts/flash_details' %>
    
    <%= yield :layout %>
  </div>

</body>
</html>