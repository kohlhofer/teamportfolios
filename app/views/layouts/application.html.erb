<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title><%=h @page_title ? "#{@page_title} | Team Portfolios" : "Team Portfolios" %></title>
    <%= javascript_include_tag :all, :cache => true %>
    <%= stylesheet_link_tag :all, :cache => true %>
</head>
<body>
    <div id="navigation">
      <ul>
        <li><%= link_to "Team Portfolios", root_url %></li>
         <% if logged_in? -%>
         <li><%= link_to "Logged in as #{current_user.name}", current_user %></li>
         <li><%= link_to "Your Account", settings_path, { :title => "Change your profile settings" }    %></li>
         <li><%= link_to "Log out", logout_path, { :title => "Log out" }    %></li>
        <% else -%>
          <%= link_to "Sign in",  login_path,  { :title => "Log in", :id => "loginLink" }  %>
        <% end -%>
      </ul>
    </div>
    <div class="container_16">
      <%= render :partial => 'layouts/flash_details' %>
      <%= yield :layout %>
    </div>
</body>
</html>